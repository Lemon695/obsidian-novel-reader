{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": false,
		"sourceMap": true,
		"module": "CommonJS",
		"target": "ES6",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7",
			"ES2021"
		],
		"types": [
			"node",
			"svelte",
			"jest"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.svelte",
		"test/**/*.ts"
	],
	"exclude": [
		"node_modules/*"
	]
}
